{
  "manifest_version": 3,
  "name": "AdFriend",
  "version": "0.1.0",
  "description": "Replace ads with positive content",
  "permissions": [
    "storage",
    "tabs",
    "offscreen",
    "alarms"
  ],
  "host_permissions": [
    "https://easylist.to/*",
    "https://api.quotable.io/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["src/content.js"],
    "css": ["src/styles.css"]
  }],
  "web_accessible_resources": [{
    "resources": ["lib/tensorflow.js", "src/sandbox.js"],
    "matches": ["<all_urls>"]
  }],
  "sandbox": {
    "pages": ["src/sandbox.html"]
  }
}